@{
    ViewBag.Title = "Module Management";
}


<h3 class="page-header"><span class="glyphicon glyphicon-th-large" aria-hidden="true"></span> Module Management</h3>
<div id="toolbar" class="btn-group">
    <a href="/Modules/Create" class="btn btn-default" role="button"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增</a>

    <button id="btn_edit" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
    </button>
    <button id="btn_delete" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
    </button>
</div>
<table id="tbData"></table>
@section Scripts {
    @Scripts.Render("~/bundles/bootstraptable")
    @Scripts.Render("~/bundles/public")
    <script type="text/javascript">
        $(function () {
            var cols = [{ checkbox: true },
                { field: "ModuleName", title: "ModuleName" },
                { field: "CreatedBy", title: "CreatedBy" },
                { field: "CreatedDate", title: "CreatedDate" },
            ];
            initTable("#tbData", "/Modules/GetData", cols, null, { toolbar: '#toolbar', search:false});
        });
       
    </script>
}
@section styles {
    @Styles.Render("~/Content/bootstraptable")
}